<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CVEnhancer.CvPreviewPage"
             Title="Podgląd CV">

    <ContentPage.Resources>

        <Style x:Key="SectionCard" TargetType="Border">
            <Setter Property="Stroke" Value="{AppThemeBinding Light=#E4E7EC, Dark=#2B2F36}" />
            <Setter Property="StrokeThickness" Value="1" />
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <RoundRectangle CornerRadius="18" />
                </Setter.Value>
            </Setter>
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="Padding" Value="14" />
        </Style>

        <Style x:Key="OutlinedTile" TargetType="Border">
            <Setter Property="Stroke" Value="{AppThemeBinding Light=#D0D5DD, Dark=#2B2F36}" />
            <Setter Property="StrokeThickness" Value="1" />
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <RoundRectangle CornerRadius="14" />
                </Setter.Value>
            </Setter>
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="Padding" Value="12" />
        </Style>

        <Style x:Key="H1" TargetType="Label">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="TextColor" Value="{AppThemeBinding Light=#101828, Dark=#FFFFFF}" />
        </Style>

        <Style x:Key="H2" TargetType="Label">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="TextColor" Value="{AppThemeBinding Light=#101828, Dark=#FFFFFF}" />
        </Style>

        <Style x:Key="Muted" TargetType="Label">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="TextColor" Value="{AppThemeBinding Light=#667085, Dark=#A0A7B4}" />
        </Style>

        <Style x:Key="Body" TargetType="Label">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="TextColor" Value="{AppThemeBinding Light=#344054, Dark=#C8CDD6}" />
        </Style>

    </ContentPage.Resources>

    <!-- sticky footer -->
    <Grid RowDefinitions="*,Auto">

        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="16" Spacing="14">

                <!-- HEADER (personal data) -->
                <Border Style="{StaticResource SectionCard}">
                    <VerticalStackLayout Spacing="10">

                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                            <!-- zamiast Image.Clip -->
                            <Border StrokeThickness="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="18" />
                                </Border.StrokeShape>

                                <Image Source="{Binding ProfileImageSource}"
                       HeightRequest="64"
                       WidthRequest="64"
                       Aspect="AspectFill" />
                            </Border>

                            <VerticalStackLayout Grid.Column="1" Spacing="4">
                                <Label Text="{Binding FullName}" Style="{StaticResource H1}" />
                                <Label Text="{Binding Headline}" Style="{StaticResource Body}" />
                            </VerticalStackLayout>
                        </Grid>

                        <!-- contact chips: FlexLayout bez RowSpacing/ColumnSpacing -->
                        <FlexLayout Direction="Row"
                    Wrap="Wrap"
                    AlignItems="Start"
                    JustifyContent="Start">

                            <Border Style="{StaticResource OutlinedTile}"
                    IsVisible="{Binding HasEmail}"
                    Padding="10,6"
                    Margin="0,0,8,8">
                                <Label Text="{Binding Email}" Style="{StaticResource Body}" />
                            </Border>

                            <Border Style="{StaticResource OutlinedTile}"
                    IsVisible="{Binding HasPhone}"
                    Padding="10,6"
                    Margin="0,0,8,8">
                                <Label Text="{Binding Phone}" Style="{StaticResource Body}" />
                            </Border>

                            <Border Style="{StaticResource OutlinedTile}"
                    IsVisible="{Binding HasLinkedIn}"
                    Padding="10,6"
                    Margin="0,0,8,8">
                                <Label Text="{Binding LinkedIn}" Style="{StaticResource Body}" />
                            </Border>

                            <Border Style="{StaticResource OutlinedTile}"
                    IsVisible="{Binding HasGitHub}"
                    Padding="10,6"
                    Margin="0,0,8,8">
                                <Label Text="{Binding GitHub}" Style="{StaticResource Body}" />
                            </Border>

                            <Border Style="{StaticResource OutlinedTile}"
                    IsVisible="{Binding HasPortfolio}"
                    Padding="10,6"
                    Margin="0,0,8,8">
                                <Label Text="{Binding Portfolio}" Style="{StaticResource Body}" />
                            </Border>

                        </FlexLayout>

                        <Label Text="{Binding Summary}"
               IsVisible="{Binding HasSummary}"
               Style="{StaticResource Body}" />

                        <Label Text="{Binding SummaryHint}"
               IsVisible="{Binding ShowSummaryHint}"
               Style="{StaticResource Muted}" />

                    </VerticalStackLayout>
                </Border>


                <!-- WORK -->
                <Border Style="{StaticResource SectionCard}" IsVisible="{Binding HasWork}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="{Binding WorkHeader}" Style="{StaticResource H2}" />

                        <CollectionView ItemsSource="{Binding WorkItems}" SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource OutlinedTile}" Margin="0,0,0,10">
                                        <VerticalStackLayout Spacing="6">
                                            <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="14" />
                                            <Label Text="{Binding Description}" Style="{StaticResource Body}" />
                                            <Label Text="{Binding SkillsText}" Style="{StaticResource Muted}" />
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

                <!-- PROJECTS -->
                <Border Style="{StaticResource SectionCard}" IsVisible="{Binding HasProjects}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="{Binding ProjectsHeader}" Style="{StaticResource H2}" />

                        <CollectionView ItemsSource="{Binding ProjectItems}" SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource OutlinedTile}" Margin="0,0,0,10">
                                        <VerticalStackLayout Spacing="6">
                                            <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="14" />
                                            <Label Text="{Binding Description}" Style="{StaticResource Body}" />
                                            <Label Text="{Binding SkillsText}" Style="{StaticResource Muted}" />
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

                <!-- CERTIFICATES -->
                <Border Style="{StaticResource SectionCard}" IsVisible="{Binding HasCertificates}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="{Binding CertificatesHeader}" Style="{StaticResource H2}" />

                        <CollectionView ItemsSource="{Binding CertificateItems}" SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource OutlinedTile}" Margin="0,0,0,10">
                                        <VerticalStackLayout Spacing="6">
                                            <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="14" />
                                            <Label Text="{Binding Description}" Style="{StaticResource Body}" />
                                            <Label Text="{Binding SkillsText}" Style="{StaticResource Muted}" />
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

                <!-- EDUCATION -->
                <Border Style="{StaticResource SectionCard}" IsVisible="{Binding HasEducation}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="{Binding EducationHeader}" Style="{StaticResource H2}" />

                        <CollectionView ItemsSource="{Binding EducationItems}" SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource OutlinedTile}" Margin="0,0,0,10">
                                        <VerticalStackLayout Spacing="6">
                                            <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="14" />
                                            <Label Text="{Binding Description}" Style="{StaticResource Body}" />
                                            <Label Text="{Binding SkillsText}" Style="{StaticResource Muted}" />
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

                <BoxView HeightRequest="90" Opacity="0" />
            </VerticalStackLayout>
        </ScrollView>

        <!-- Footer actions -->
        <Border Grid.Row="1"
                Padding="16,12"
                BackgroundColor="Transparent"
                Stroke="{AppThemeBinding Light=#E4E7EC, Dark=#2B2F36}"
                StrokeThickness="1">
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button Text="Wróć"
                        Command="{Binding BackCommand}"
                        HeightRequest="48"
                        CornerRadius="14" />
                <Button Text="Eksportuj (wkrótce)"
                        Command="{Binding ExportCommand}"
                        HeightRequest="48"
                        CornerRadius="14"
                        Grid.Column="1" />
            </Grid>
        </Border>

    </Grid>
</ContentPage>
