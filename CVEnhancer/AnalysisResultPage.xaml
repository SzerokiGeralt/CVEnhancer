<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CVEnhancer.AnalysisResultPage"
             x:Name="PageRoot"
             Title="Wynik analizy">

    <ContentPage.Resources>

        <!-- Outlined tile style (transparent background + border) -->
        <Style x:Key="OutlinedTile" TargetType="Border">
            <Setter Property="Stroke" Value="{AppThemeBinding Light=#D0D5DD, Dark=#2B2F36}" />
            <Setter Property="StrokeThickness" Value="1" />
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <RoundRectangle CornerRadius="14" />
                </Setter.Value>
            </Setter>
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="Padding" Value="12" />
        </Style>

        <!-- Section card style -->
        <Style x:Key="SectionCard" TargetType="Border">
            <Setter Property="Stroke" Value="{AppThemeBinding Light=#E4E7EC, Dark=#2B2F36}" />
            <Setter Property="StrokeThickness" Value="1" />
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <RoundRectangle CornerRadius="18" />
                </Setter.Value>
            </Setter>
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="Padding" Value="14" />
        </Style>

        <Style x:Key="SectionTitle" TargetType="Label">
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="TextColor" Value="{AppThemeBinding Light=#101828, Dark=#FFFFFF}" />
        </Style>

        <Style x:Key="MutedText" TargetType="Label">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="TextColor" Value="{AppThemeBinding Light=#667085, Dark=#A0A7B4}" />
        </Style>

        <Style x:Key="PrimaryText" TargetType="Label">
            <Setter Property="TextColor" Value="{AppThemeBinding Light=#101828, Dark=#FFFFFF}" />
        </Style>

        <Style x:Key="SubtitleText" TargetType="Label">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="TextColor" Value="{AppThemeBinding Light=#344054, Dark=#C8CDD6}" />
        </Style>

        <!-- Reusable tile template (NO CollectionView selection -> no checkmark icon, no rectangular system highlight) -->
        <DataTemplate x:Key="MatchTileTemplate">
            <Border Style="{StaticResource OutlinedTile}" Margin="0,0,0,10">

                <!-- Hover (desktop) -->
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="Transparent" />
                                    <Setter Property="StrokeThickness" Value="1" />
                                </VisualState.Setters>
                            </VisualState>

                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor"
                                            Value="{AppThemeBinding Light=#0A000000, Dark=#12FFFFFF}" />
                                    <Setter Property="StrokeThickness" Value="1.5" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </VisualStateManager.VisualStateGroups>

                <!-- Selected state driven by item property: IsSelected -->
                <Border.Triggers>
                    <DataTrigger TargetType="Border" Binding="{Binding IsSelected}" Value="True">
                        <Setter Property="BackgroundColor"
                                Value="{AppThemeBinding Light=#14000000, Dark=#1FFFFFFF}" />
                        <Setter Property="Stroke"
                                Value="{AppThemeBinding Light=#98A2B3, Dark=#667085}" />
                        <Setter Property="StrokeThickness" Value="2" />
                    </DataTrigger>
                </Border.Triggers>

                <!-- Tap to toggle selection (handled by VM command) -->
                <Border.GestureRecognizers>
                    <TapGestureRecognizer
                        Command="{Binding Source={x:Reference PageRoot}, Path=BindingContext.ToggleSelectCommand}"
                        CommandParameter="{Binding .}" />
                </Border.GestureRecognizers>

                <VerticalStackLayout Spacing="6">

                    <Grid ColumnDefinitions="*,Auto"
                          RowDefinitions="Auto,Auto,Auto"
                          ColumnSpacing="12">

                        <Label Text="{Binding Title}"
                               FontAttributes="Bold"
                               FontSize="14"
                               Style="{StaticResource PrimaryText}" />

                        <!-- Bigger score badge, right-aligned, vertically centered -->
                        <Border Grid.Column="1"
                                Grid.RowSpan="3"
                                VerticalOptions="Center"
                                HorizontalOptions="End"
                                Stroke="{AppThemeBinding Light=#D0D5DD, Dark=#2B2F36}"
                                StrokeThickness="1"
                                BackgroundColor="Transparent"
                                Padding="14,10">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="18" />
                            </Border.StrokeShape>

                            <Label Text="{Binding ScoreText}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"
                                   VerticalTextAlignment="Center"
                                   Style="{StaticResource PrimaryText}" />
                        </Border>

                        <Label Grid.Row="1"
                               Text="{Binding Description}"
                               LineBreakMode="TailTruncation"
                               MaxLines="2"
                               Style="{StaticResource SubtitleText}" />

                        <Label Grid.Row="2"
                               Text="{Binding MatchedSkillsText}"
                               Style="{StaticResource MutedText}" />
                    </Grid>

                </VerticalStackLayout>
            </Border>
        </DataTemplate>

    </ContentPage.Resources>

    <!-- Layout with sticky bottom button -->
    <Grid RowDefinitions="*,Auto">

        <!-- Scrollable content -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="16" Spacing="14">

                <!-- Header / Summary -->
                <Border Style="{StaticResource SectionCard}">
                    <VerticalStackLayout Spacing="10">

                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                            <Label Text="Podsumowanie"
                                   Style="{StaticResource SectionTitle}" />

                            <Border Grid.Column="1"
                                    Style="{StaticResource OutlinedTile}"
                                    Padding="10,6">
                                <Label Text="{Binding OverallScoreText}"
                                       FontAttributes="Bold"
                                       Style="{StaticResource PrimaryText}" />
                            </Border>

                            <Label Grid.Row="1"
                                   Grid.ColumnSpan="2"
                                   Text="{Binding DetectedSkillsText}"
                                   Style="{StaticResource SubtitleText}" />
                        </Grid>

                        <Label Text="{Binding KeywordsText}"
                               Style="{StaticResource MutedText}" />
                    </VerticalStackLayout>
                </Border>

                <!-- WORK -->
                <Border Style="{StaticResource SectionCard}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="{Binding WorkHeader}" Style="{StaticResource SectionTitle}" />

                        <!-- SelectionMode=None => no system checkmark, no rectangular highlight -->
                        <CollectionView ItemsSource="{Binding WorkItems}"
                                        SelectionMode="None"
                                        ItemTemplate="{StaticResource MatchTileTemplate}" />
                    </VerticalStackLayout>
                </Border>

                <!-- PROJECTS -->
                <Border Style="{StaticResource SectionCard}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="{Binding ProjectsHeader}" Style="{StaticResource SectionTitle}" />

                        <CollectionView ItemsSource="{Binding ProjectItems}"
                                        SelectionMode="None"
                                        ItemTemplate="{StaticResource MatchTileTemplate}" />
                    </VerticalStackLayout>
                </Border>

                <!-- CERTIFICATES -->
                <Border Style="{StaticResource SectionCard}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="{Binding CertificatesHeader}" Style="{StaticResource SectionTitle}" />

                        <CollectionView ItemsSource="{Binding CertificateItems}"
                                        SelectionMode="None"
                                        ItemTemplate="{StaticResource MatchTileTemplate}" />
                    </VerticalStackLayout>
                </Border>

                <!-- EDUCATION -->
                <Border Style="{StaticResource SectionCard}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="{Binding EducationHeader}" Style="{StaticResource SectionTitle}" />

                        <CollectionView ItemsSource="{Binding EducationItems}"
                                        SelectionMode="None"
                                        ItemTemplate="{StaticResource MatchTileTemplate}" />
                    </VerticalStackLayout>
                </Border>

                <!-- Bottom padding so last list doesn't hide behind footer -->
                <BoxView HeightRequest="70" Opacity="0"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Sticky footer with button -->
        <Border Grid.Row="1"
                Padding="16,12"
                BackgroundColor="Transparent"
                Stroke="{AppThemeBinding Light=#E4E7EC, Dark=#2B2F36}"
                StrokeThickness="1">
            <Button Text="Generuj CV"
                    FontAttributes="Bold"
                    HeightRequest="48"
                    CornerRadius="14"
                    Clicked="OnGenerateCvClicked"/>
        </Border>
    </Grid>
</ContentPage>
