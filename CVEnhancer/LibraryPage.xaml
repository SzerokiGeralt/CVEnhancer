<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CVEnhancer.LibraryPage"
             Title="Biblioteka">

    <Grid RowDefinitions="Auto,*" Padding="20">
        <Label Grid.Row="0" 
               Text="Twoje wygenerowane CV" 
               FontSize="24" 
               Margin="0,0,0,20" />
        
        <ScrollView Grid.Row="1">
            <CollectionView x:Name="CVCollection">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,5" Padding="15">
                            <Grid ColumnDefinitions="*,Auto">
                                <VerticalStackLayout Grid.Column="0" Spacing="5">
                                    <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold" />
                                    <Label Text="{Binding LastModifiedDate, StringFormat='Ostatnia modyfikacja: {0:dd.MM.yyyy HH:mm}'}" FontSize="12" />
                                </VerticalStackLayout>
                                <Button Grid.Column="1" 
                                        Text="OtwÃ³rz" 
                                        VerticalOptions="Center" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label Text="Brak wygenerowanych CV" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center" 
                           Margin="0,50,0,0" />
                </CollectionView.EmptyView>
            </CollectionView>
        </ScrollView>
    </Grid>
</ContentPage>