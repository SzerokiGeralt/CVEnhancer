<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CVEnhancer.DashboardPage"
             Title="Dashboard">

    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Label Text="{Binding FirstName, StringFormat='Witaj {0}!'}"  Style="{StaticResource Headline}"/>
        
        <Label Text="Zarządzaj swoimi CV" />
        
        <Button Text="Przejdź do Biblioteki" 
                Clicked="OnGoToLibraryClicked" />
        
        <Button Text="Generuj nowe CV" 
                Clicked="OnGoToGenerateClicked" />
    </VerticalStackLayout>

</ContentPage>