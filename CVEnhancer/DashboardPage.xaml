<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CVEnhancer.DashboardPage"
             Title="Dashboard">

    <ScrollView Padding="40">
        <VerticalStackLayout Spacing="20">
            <Label Text="Witaj, Jan!" Style="{StaticResource Headline}" />
            <Label Text="Zarządzaj swoim CV..." TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Magenta}}" />
        </VerticalStackLayout>
    </ScrollView>
    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Button Text="Przejdź do Biblioteki" 
                Clicked="OnGoToLibraryClicked" />
        
        <Button Text="Generuj nowe CV" 
                Clicked="OnGoToGenerateClicked" />
    </VerticalStackLayout>

</ContentPage>